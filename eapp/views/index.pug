include mixins
doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    // The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags
    title BrainVerse
    // Bootstrap
    link(href='/dist/css/bootstrap.min.css', rel='stylesheet')
    link(href='/brainverse.css', rel='stylesheet')
  body
    nav.navbar.navbar-inverse.navbar-fixed-top
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') ReproNIm
        #navbar.navbar-collapse.collapse
          ul.nav.navbar-nav.navbar-right
            li
              p.navbar-btn
                a.btn.btn-success(href='#') Sign In
            li
              a(href='#') Settings
            li
              a(href='#') Profile
            li
              a(href='#') Help
          form.navbar-form.navbar-right
            input.form-control(type='text', placeholder='Search...')
    .container-fluid
      .row
        .col-xs-3
          .well
            ul.nav.nav-list
              li.nav-header BrainVerse
              li.active
                a(href='#') Overview
              li
                a(href='#') Projects
              li
                a(href='#') Workflows
              li
                a(href='#') Executions
        .col-xs-9
          .jumbotron
            h1 BrainVerse
            p  Collaborative Electronic Laboratory Notebook
            p
              a.btn.btn-primary.btn-lg(href='https://github.com/ReproNim/brainverse', role='button') Learn more »
          if expressFlash
            p <strong>#{expressFlash }</strong>  
          p
            a.btn.btn-primary.btn-lg(href='/addProject', role='button')  Add a Project »
          p
            a.btn.btn-primary.btn-lg(href='addExperiment.html', role='button')  Add an Experiment »
          
    // jQuery (necessary for Bootstrap's JavaScript plugins)
    script(src='/dist/jquery/jquery.min.js', type='text/javascript')
    script.
      try{
      $ = jQuery = module.exports
      }catch(e){}
    script(src='/dist/bootstrap/bootstrap.min.js', type='text/javascript')
