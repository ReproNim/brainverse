include mixins
doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    // The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags
    title BrainVerse
    // Bootstrap
    link(href='/dist/css/bootstrap.min.css', rel='stylesheet')
    link(href='/brainverse.css', rel='stylesheet')
  body
    
    nav.navbar.navbar-inverse
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='http://www.reproducibleimaging.org/') ReproNim
        #navbar.navbar-collapse.collapse
          ul.nav.navbar-nav
            li
              a(href='#') Settings
            li
              a(href='#') Profile
            li
              a(href='#') Help
          ul.nav.navbar-nav.navbar-right
            li
              if user
                a(href='/account') Welcome #{user.username}!   
            li
              p.navbar-btn
                if !user
                  a.btn.btn-primary(href='/auth/github') Login with GitHub
                else
                  a.btn.btn-success(href='/logout') Log Out   
            
    .container-fluid
      .row
        .col-xs-12
          h3 Welcome to Brainverse!
          p Brainverse is a collaborative electronic laboratory notebook for neuroimaging research.
          p
            | To learn more about Brainverse  
            a(href='https://github.com/ReproNim/brainverse') click here Â»
          if expressFlash
            p <strong>#{expressFlash }</strong>  
          
          if !user
            br
            p Start using the app by logging in with your exisiting account on one of the service providers:
            ul
              li: a(href="/auth/github") GitHub
              br
              li: a(href="#") Google
          else
            p Welcome #{user.username}!
                
            
    // jQuery (necessary for Bootstrap's JavaScript plugins)
    script(src='/dist/jquery/jquery.min.js', type='text/javascript')
    script.
      try{
      $ = jQuery = module.exports
      }catch(e){}
    script(src='/dist/bootstrap/bootstrap.min.js', type='text/javascript')
